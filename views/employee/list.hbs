<h3>
    <a href="/employee" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Create New</a> Employee List 
</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>City</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.city}}</td>
            <td>
                <a href="/employee/{{this._id}}"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>