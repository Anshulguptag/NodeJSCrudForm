<h3>
    <a href="/company" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Register New Company</a> Company List 
</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Mobile</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.mobile}}</td>
            <td>
                <a href="/company/delete/{{this._id}}" onclick="return confirm('Are you sure to unregister this company ?');">Unregister</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>